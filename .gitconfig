[core]
	editor = vim
[user]
	name = Benedikt Kleinmeier
	email = kleinmeier.benedikt@gmail.com
[color]
	ui = auto
# Configure Git colors if desired:
# [color "branch"]
#     remote = red bold
#     upstream = blue bold
# [color "status"]
#     added = green bold
#     changed = red bold
#     untracked = red bold
[gui]
	spellingdictionary = en_US
	fontui = -family \"Nimbus Sans\" -size 12 -weight normal -slant roman -underline 0 -overstrike 0
	fontdiff = -family \"Nimbus Mono PS\" -size 12 -weight normal -slant roman -underline 0 -overstrike 0
[push]
	default = simple
[diff]
	tool = kompare
[difftool]
	prompt = false
