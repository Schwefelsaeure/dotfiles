SSH_ENV=~/.ssh/environment
  
function start_ssh_agent {
    ssh-agent | sed "s/^echo/#echo/" > "$SSH_ENV"
    chmod 600 "$SSH_ENV"
    source "$SSH_ENV" > /dev/null
    ssh-add
}
  
if [ -f "$SSH_ENV" ]; then
     source "$SSH_ENV" > /dev/null
     ps -ef | grep "$SSH_AGENT_PID" | grep "ssh-agent$" > /dev/null || {
        start_ssh_agent;
    }
else
    start_ssh_agent;
fi
