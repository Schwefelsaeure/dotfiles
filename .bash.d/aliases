# Aliases

## Command Redefinitions

alias diff="diff --color=auto"
alias dir="dir --color=auto"
alias dmesg='dmesg --color'
alias grep="grep --color=auto"
alias ls="ls --color=auto"
alias ll="ls -al"

## Git

alias ga="git add"
alias gaf="ga --force"
alias gb="git branch -vv"
alias gba="gb --all"
alias gc="git commit --verbose"
alias gca="gc --all"
alias gcgui="git gui"
alias gcl="git clean"
alias gco="git checkout"
alias gd="git diff"
alias gdc="gd --cached"
alias gdgui="git difftool"
alias gfa="git fetch --all"
alias gg="git grep"
alias gh="git help"
alias gl='git log --date short --graph --pretty=tformat:"%C(auto)%h %d %s %C(cyan)%an %C(green)%cd %C(reset)"'
alias gla="gl --all"
alias glap="gla --patch"
alias glas="gla --stat"
alias glgui="gitk --all"
alias glth='gl $(git describe --tags --abbrev=0)..HEAD'
alias gm="git merge"
alias gmgui="git mergetool"
alias gpl="git pull --verbose"
alias gps="git push --verbose"
alias gpsr="git pull -verbose --rebase"
alias gr="git reset HEAD"
alias gs="git status --short"
alias gsh="git show"
