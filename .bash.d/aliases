# Command Redefinitions

alias grep="grep --color=auto"
alias ls="ls --color=auto"
alias ll="ls -l"

# Git

alias ga="git add"
alias gaf="ga -f"
alias gb="git branch -vv"
alias gba="gb -a"
alias gc="git commit -v"
alias gca="gc -a"
alias gctool="git gui"
alias gco="git checkout"
alias gd="git diff"
alias gdc="gd --cached"
alias gfa="git fetch --all"
alias gg="git grep"
alias gh="git help"
alias gl="git log --date=relative --graph --pretty=format:\"%C(auto)%h %d %s %C(cyan)%an %C(green)%cd %C(reset)\""
alias gla="gl --all"
alias glap="gla -p"
alias glas="gla --stat"
alias glth='gl $(git describe --tags --abbrev=0)..HEAD'
alias gltool="gitk --all"
alias gm="git merge"
alias gpl="git pull -v"
alias gps="git push -v"
alias gr="git reset HEAD"
alias gs="git status -s"

# Locations

alias data="cd /mnt/users/$USER"
