# Aliases

## Command Redefinitions

alias diff="diff --color=auto"
alias dir="dir --color=auto"
alias dmesg='dmesg --color'
alias grep="grep --color=auto"
alias ls="ls --color=auto"
alias ll="ls -al"

## Git

alias ga="git add"
alias gaf="ga -f"
alias gb="git branch -vv"
alias gba="gb -a"
alias gc="git commit -v"
alias gca="gc -a"
alias gcgui="git gui"
alias gco="git checkout"
alias gd="git diff"
alias gdc="gd --cached"
alias gdgui="git difftool"
alias gfa="git fetch --all"
alias gg="git grep"
alias gh="git help"
alias gl="git log --date=short --graph --pretty=tformat:\"%C(auto)%h %d %s %C(cyan)%an %C(green)%cd %C(reset)\""
alias gla="gl --all"
alias glap="gla -p"
alias glas="gla --stat"
alias glgui="gitk --all"
alias glth='gl $(git describe --tags --abbrev=0)..HEAD'
alias gm="git merge"
alias gmgui="git mergetool"
alias gpl="git pull -v"
alias gps="git push -v"
alias gr="git reset HEAD"
alias gs="git status -s"
alias gsh="git show"
